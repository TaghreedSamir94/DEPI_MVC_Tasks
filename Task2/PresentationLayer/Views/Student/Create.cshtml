@using PresentationLayer.ActionRequests;
@model CreateStudentActionRequest;

<h2> Add New Student</h2>
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputName1">Name</label>
        <input type="text" name="Name" class="form-control" id="exampleInputName1" aria-describedby="emailHelp" placeholder="Enter Name">
    </div>

    <div class="form-group">
        <label for="exampleInputAge1">Age</label>
        <input type="number" name="Age" class="form-control" id="exampleInputAge1" placeholder="Age">
    </div>

    <div class="form-group">
        <label for="exampleInputAddress1">Address</label>
        <input type="text" name="Address" class="form-control" id="exampleInputAddress1" placeholder="Address">
    </div>

    <div class="form-group">
        <label for="exampleInputImage1">Image</label>
        <input type="file" name="imageFile" class="form-control" id="exampleInputImage1" placeholder="Image">
    </div>


    <br />
    <br />
    <button type="submit" class="btn btn-primary">Add Student</button>
</form>